---
// src/pages/proyectos.astro
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar.astro';
import Contact from '../components/Contact.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="Proyectos | EMLI">
    <Navbar />

    <div class="w-full bg-white relative z-10">
        <!-- HEADER PROYECTOS -->
        <section class="relative h-[60vh] sm:h-[70vh] md:h-[60vh] sm:h-[70vh] md:h-[85vh] lg:h-[60vh] sm:h-[70vh] md:h-[85vh] lg:h-[95vh] min-h-[450px] lg:min-h-[450px] lg:min-h-[500px] flex items-center justify-center md:justify-start bg-zinc-900">
            <img 
                src="/public/servicios-header.jpg" 
                class="absolute inset-0 w-full h-full object-cover" 
                alt="Proyectos EMLI"
            >
            <div class="absolute inset-0 bg-[#1f4c95]/70 mix-blend-multiply"></div>
            <div class="absolute inset-0 bg-gradient-to-t from-[#1f4c95] via-transparent "></div>

            <div class="relative z-10 max-w-7xl mx-auto px-4 sm:px-4 sm:px-6 w-full text-center md:text-left mt-16">
                <span class="text-xs font-bold text-gray-300 uppercase tracking-widest mb-2 block">Portafolio</span>
                <h1 class="text-3xl sm:text-4xl md:text-4xl sm:text-5xl md:text-3xl sm:text-4xl md:text-3xl sm:text-4xl md:text-5xl lg:text-6xl lg:text-4xl sm:text-5xl md:text-3xl sm:text-4xl md:text-3xl sm:text-4xl md:text-5xl lg:text-6xl lg:text-7xl font-black text-white uppercase mb-4 sm:mb-4 sm:mb-4 sm:mb-5 lg:mb-5 sm:mb-5 sm:mb-6 leading-tight">
                    Expertise que <span class="text-[#a3e635]">se nota.</span>
                </h1>
                <p class="text-lg md:text-xl sm:text-2xl text-gray-100 max-w-2xl mx-auto md:mx-0 font-light">
                    Soluciones llave en mano ejecutadas con precisión, normativa y seguridad.
                </p>
            </div>
        </section>
    <!-- SECCIÓN PROYECTOS -->
<section class="bg-white py-12 sm:py-16 md:py-12 sm:py-16 md:py-16 sm:py-18 md:py-20 lg:py-12 sm:py-16 md:py-16 sm:py-18 md:py-20 lg:py-24">
    <div class="max-w-7xl mx-auto px-4 sm:px-4 sm:px-6">
        
        <div class="flex flex-wrap justify-center md:justify-start gap-4 mb-12 sm:mb-14 lg:mb-12 sm:mb-14 lg:mb-16">
            <button class="px-4 sm:px-4 sm:px-6 py-2 bg-[#1F4C95] text-white font-titillium font-bold text-sm uppercase tracking-wider rounded-sm">Todos</button>
            <button class="px-4 sm:px-4 sm:px-6 py-2 bg-slate-100 text-slate-600 hover:bg-slate-200 transition font-titillium font-bold text-sm uppercase tracking-wider rounded-sm">Media Tensión</button>
            <button class="px-4 sm:px-4 sm:px-6 py-2 bg-slate-100 text-slate-600 hover:bg-slate-200 transition font-titillium font-bold text-sm uppercase tracking-wider rounded-sm">Iluminación</button>
            <button class="px-4 sm:px-4 sm:px-6 py-2 bg-slate-100 text-slate-600 hover:bg-slate-200 transition font-titillium font-bold text-sm uppercase tracking-wider rounded-sm">Industrial</button>
        </div>
        <!-- Proyectos Grid -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 sm:gap-7 lg:gap-6 sm:gap-7 lg:gap-8">
            
            <div class="group relative overflow-hidden bg-white shadow-xl rounded-lg hover:-translate-y-1 transition-all duration-300 md:h-[550px] flex flex-col border border-gray-50">
