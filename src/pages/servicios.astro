---
// src/pages/servicios.astro
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar.astro';
import Contact from '../components/Contact.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="Servicios | EMLI">
    <Navbar />

    <div class="w-full bg-white relative z-10">
        <!-- HEADER SERVICIOS -->
        <section class="relative h-[60vh] sm:h-[70vh] md:h-[60vh] sm:h-[70vh] md:h-[85vh] lg:h-[60vh] sm:h-[70vh] md:h-[85vh] lg:h-[95vh] min-h-[450px] lg:min-h-[450px] lg:min-h-[500px] flex items-center -mt-10 justify-center md:justify-start bg-zinc-900 w-full">
            <img 
                src="/servicios-header.jpg" 
                class="absolute inset-0 w-full h-full object-cover" 
                alt="Servicios Industriales EMLI"
            >
            <div class="absolute inset-0 bg-[#153068]/30 mix-blend-multiply"></div>
            <div class="absolute inset-0 bg-gradient-to-t from-[#153068] via-transparent to-transparent "></div>

            <div class="relative z-10 max-w-7xl mx-auto px-2.5 sm:px-3 w-full mt-16 md:mt-12 sm:mt-16 lg:mt-12 sm:mt-16 lg:mt-20 text-center md:text-left">
                <h1 class="text-3xl sm:text-4xl md:text-4xl sm:text-5xl md:text-3xl sm:text-4xl md:text-3xl sm:text-4xl md:text-5xl lg:text-6xl lg:text-4xl sm:text-5xl md:text-3xl sm:text-4xl md:text-3xl sm:text-4xl md:text-5xl lg:text-6xl lg:text-7xl font-bold font-rubik text-white uppercase leading-none tracking-tight mb-5 sm:mb-5 sm:mb-6 drop-shadow-2xl">
                    Servicios <span class="text-[#a3e635]">Eléctricos</span><br>
                    <span class="text-[#a3e635]">Industriales.</span>
                </h1>
                <p class="text-lg md:text-1xl font-rubik text-gray-100 font-light tracking-wide max-w-2xl mx-auto md:mx-0 drop-shadow-md">
                    Ingeniería, CFE y ejecución.
                </p>
            </div>

           
        </section>
        <!-- SECCIÓN SERVICIOS EMLI -->
        <section class="bg-white py-12 sm:py-16 md:py-12 sm:py-16 md:py-16 sm:py-18 md:py-20 lg:py-12 sm:py-16 md:py-16 sm:py-18 md:py-20 lg:py-24 w-full">
    <div class="max-w-7xl mx-auto px-4 sm:px-4 sm:px-6">
        
        <div class="mb-10 sm:mb-11 lg:mb-12 md:mb-12 sm:mb-14 lg:mb-12 sm:mb-14 lg:mb-16 text-center md:text-left">
            <span class="text-sm text-[#1F4C95] uppercase tracking-widest mb-2 block flex items-center justify-center md:justify-start gap-2">
                Servicios <div class="w-8 h-[1px] bg-[#1e3a8a] transform translate-y-[4px] "></div>
            </span>
            <h2 class="text-3xl sm:text-4xl md:text-3xl sm:text-4xl md:text-3xl sm:text-4xl md:text-5xl lg:text-3xl sm:text-4xl md:text-3xl sm:text-4xl md:text-5xl lg:text-6xl font-black text-[#1e3a8a] uppercase">EMLI</h2>
        </div>
            <!-- Tarjetas de servicios EMLI -->
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6 sm:gap-7 lg:gap-6 sm:gap-7 lg:gap-8">
            
            <div class="bg-[#F5F7FA] rounded-2xl overflow-hidden flex flex-col group hover:shadow-2xl hover:-translate-y-2 transition duration-300 relative h-auto md:h-[550px]">
                <div class="p-10 flex-grow">
                    <h3 class="font-rubik font-semibold text-xl sm:text-2xl text-[#1F4C95] mb-5 sm:mb-5 sm:mb-6">Media Tensión (MT)</h3>
                    <p class="font-titillium text-sm sm:text-base leading-relaxed text-gray-600">
                        Subestaciones para alimentación y distribución, líneas de transmisión, sistemas de tierras y apartarrayos, mantenimiento a subestaciones, celdas y protecciones. Consideramos coordinación con CFE y pruebas de diagnóstico.
                    </p>
                </div>
                
                <div class="h-56 sm:h-48 sm:h-52 md:h-48 sm:h-52 md:h-56 lg:h-60 md:h-56 sm:h-60 md:h-64 relative mt-auto">
                    <div class="absolute top-0 left-0 w-full h-20 sm:h-22 lg:h-24 bg-gradient-to-b from-[#F5F7FA] to-transparent z-10 pointer-events-none"></div>
                    <img src="/servicios-index.jpg" class="w-full h-full object-cover relative z-0 transition duration-700">
                </div>
            </div>

            <div class="bg-[#F5F7FA] rounded-2xl overflow-hidden flex flex-col group hover:shadow-2xl hover:-translate-y-2 transition duration-300 relative h-auto md:h-[550px]">
                <div class="p-10 flex-grow">
                    <h3 class="font-rubik font-semibold text-xl sm:text-2xl text-[#1F4C95] mb-5 sm:mb-5 sm:mb-6">Baja Tensión (BT)</h3>
                    <p class="font-titillium text-sm sm:text-base leading-relaxed text-gray-600">
                        Alimentación y distribución en planta, tableros principales/secundarios, acometidas en BT, alimentación de maquinaria, bandas y grúas, generadores y moto-generadores.
                    </p>
                </div>

                <div class="h-56 sm:h-48 sm:h-52 md:h-48 sm:h-52 md:h-56 lg:h-60 md:h-56 sm:h-60 md:h-64 relative mt-auto">
                    <div class="absolute top-0 left-0 w-full h-20 sm:h-22 lg:h-24 bg-gradient-to-b from-[#F5F7FA] to-transparent z-10 pointer-events-none"></div>
                    <img src="/proceso-index.jpg" class="w-full h-full object-cover relative z-0  transition duration-700">
                </div>
            </div>

            <div class="bg-[#F5F7FA] rounded-2xl overflow-hidden flex flex-col group hover:shadow-2xl hover:-translate-y-2 transition duration-300 relative h-auto md:h-[550px]">
                <div class="p-10 flex-grow">
                    <h3 class="font-rubik font-semibold text-xl sm:text-2xl text-[#1F4C95] mb-5 sm:mb-5 sm:mb-6">Iluminación</h3>
                    <p class="font-titillium text-sm sm:text-base leading-relaxed text-gray-600">
                        Estudios luminotécnicos, especificación e instalación de sistemas de alumbrado industrial, oficinas y exterior.
                    </p>
                </div>
                
                <div class="h-56 sm:h-48 sm:h-52 md:h-48 sm:h-52 md:h-56 lg:h-60 md:h-56 sm:h-60 md:h-64 relative mt-auto">
                    <div class="absolute top-0 left-0 w-full h-20 sm:h-22 lg:h-24 bg-gradient-to-b from-[#F5F7FA] to-transparent z-10 pointer-events-none"></div>
                    <img src="/iluminacion.jpg" class="w-full h-full object-cover relative z-0  transition duration-700">
                </div>
            </div>

            <div class="bg-[#F5F7FA] rounded-2xl overflow-hidden flex flex-col group hover:shadow-2xl hover:-translate-y-2 transition duration-300 relative h-auto md:h-[550px]">
                <div class="p-10 flex-grow">
                    <h3 class="font-rubik font-semibold text-xl sm:text-2xl text-[#1F4C95] mb-5 sm:mb-5 sm:mb-6">Ingeniería</h3>
                    <ul class="font-titillium text-sm sm:text-base leading-relaxed text-gray-600 list-disc list-inside marker:text-[#1F4C95] space-y-1">
                        <li>Diseño de instalaciones eléctricas</li>
                        <li>Elaboración de catálogo con base a necesidades</li>
                        <li>Ingeniería de valor (optimización de ingenierías)</li>
                        <li>Ingeniería para gestionar factibilidad</li>
                    </ul>
                </div>
                
                <div class="h-56 sm:h-48 sm:h-52 md:h-48 sm:h-52 md:h-56 lg:h-60 md:h-56 sm:h-60 md:h-64 relative mt-auto bg-white flex items-center justify-center">
                    <div class="absolute top-0 left-0 w-full h-20 sm:h-22 lg:h-24 bg-gradient-to-b from-[#F5F7FA] to-transparent z-10 pointer-events-none"></div>
                    <img src="/ing.png" class="w-full h-full object-contain p-8 opacity-90 mix-blend-multiply relative z-0">
                </div>
            </div>

            <div class="bg-[#F5F7FA] rounded-2xl overflow-hidden flex flex-col group hover:shadow-2xl hover:-translate-y-2 transition duration-300 relative h-auto md:h-[550px]">
                <div class="p-10 flex-grow">
                    <h3 class="font-rubik font-semibold text-xl sm:text-2xl text-[#1F4C95] mb-5 sm:mb-5 sm:mb-6">Soportería a la medida</h3>
                    <p class="font-titillium text-sm sm:text-base leading-relaxed text-gray-600">
                        Fabricación e instalación de bases para transformadores, soportes estructurales y herrería para canalización aérea y equipos especiales.
                    </p>
                </div>
                
                <div class="h-56 sm:h-48 sm:h-52 md:h-48 sm:h-52 md:h-56 lg:h-60 md:h-56 sm:h-60 md:h-64 relative mt-auto">
                    <div class="absolute top-0 left-0 w-full h-20 sm:h-22 lg:h-24 bg-gradient-to-b from-[#F5F7FA] to-transparent z-10 pointer-events-none"></div>
                    <img src="/soporteria.jpg" class="w-full h-full object-cover relative z-0  transition duration-700">
                </div>
            </div>

            <div class="bg-[#F5F7FA] rounded-2xl overflow-hidden flex flex-col group hover:shadow-2xl hover:-translate-y-2 transition duration-300 relative h-auto md:h-[550px]">
                <div class="p-10 flex-grow">
                    <h3 class="font-rubik font-semibold text-xl sm:text-2xl text-[#1F4C95] mb-5 sm:mb-5 sm:mb-6">Smart Systems</h3>
                    <p class="font-titillium text-sm sm:text-base leading-relaxed text-gray-600">
                        CCTV / redes voz-datos y automatización básica (domótica) integradas al sistema eléctrico.
                    </p>
                </div>
                
                <div class="h-56 sm:h-48 sm:h-52 md:h-48 sm:h-52 md:h-56 lg:h-60 md:h-56 sm:h-60 md:h-64 relative mt-auto">
                    <div class="absolute top-0 left-0 w-full h-20 sm:h-22 lg:h-24 bg-gradient-to-b from-[#F5F7FA] to-transparent z-10 pointer-events-none"></div>
                    <img src="/smart.jpg" class="w-full h-full object-cover relative z-0  transition duration-700">
                </div>
            </div>

        </div>
    </div>
</section>
        <!-- SECCIÓN SERVICIOS ABENSA -->
    <section class="bg-[#1F4C95] py-12 sm:py-16 md:py-16 sm:py-20 md:py-12 sm:py-16 md:py-16 sm:py-18 md:py-20 lg:py-24 lg:py-16 sm:py-20 md:py-24 lg:py-32 relative overflow-hidden w-full">
    
    <div class="absolute inset-0 z-0 pointer-events-none">
        <div style="width: 100%; height: 100%; background: radial-gradient(ellipse 82.33% 83.15% at 92.05% 103.72%, #CEEA4D 2%, rgba(206, 234, 77, 0) 100%)"></div>
    </div>
    <!-- Contenido -->
    <div class="max-w-7xl mx-auto px-4 sm:px-4 sm:px-6 relative z-10">
        
        <div class="mb-10 sm:mb-11 lg:mb-12 md:mb-12 sm:mb-14 lg:mb-12 sm:mb-14 lg:mb-16 text-center md:text-left">
            <span class="text-xs font-normal text-white/80 uppercase tracking-widest mb-2 block flex items-center justify-center md:justify-start gap-1 font-titillium">
                Servicios <div class="w-8 h-[1px] bg-[#CEEA4D] transform translate-y-[4px] "></div>
            </span>
            
            <h2 class="text-3xl md:text-3xl sm:text-4xl md:text-3xl sm:text-4xl md:text-5xl font-bold text-[#CEEA4D] uppercase font-rubik leading-tight">
                ABENSA: 
                <span class="font-tilillium font-normal ">LÍNEA DE PROYECTOS ÁGILES</span>
            </h2>
        </div>
            <!-- Tarjetas de servicios ABENSA -->
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6 sm:gap-7 lg:gap-8 md:gap-8 sm:gap-10 lg:gap-8 sm:gap-10 lg:gap-12">
            
            <div class="bg-[#F5F7FA] rounded-xl overflow-hidden flex flex-col group hover:shadow-2xl hover:-translate-y-2 transition duration-300 relative h-auto md:h-[500px]">
                <div class="p-8 md:p-12 flex-grow">
                    <h3 class="text-2xl md:text-2xl sm:text-2xl sm:text-3xl font-bold text-[#1F4C95] mb-4 sm:mb-4 sm:mb-4 sm:mb-5 lg:mb-5 sm:mb-5 sm:mb-6 font-rubik">Sistemas fotovoltaicos</h3>
                    <p class="text-gray-600 text-sm md:text-sm sm:text-base leading-relaxed font-titillium">
                        Dimensionamiento, suministro e instalación; tramitología de interconexión y medidores bidireccionales en coordinación con CFE. (Aplicable a pymes e industria ligera).
                    </p>
                </div>
                
                <div class="h-56 sm:h-48 sm:h-52 md:h-48 sm:h-52 md:h-56 lg:h-60 md:h-64 md:h-56 sm:h-48 sm:h-52 md:h-48 sm:h-52 md:h-56 lg:h-60 md:h-56 sm:h-60 md:h-64 lg:h-56 sm:h-60 md:h-64 lg:h-72 overflow-hidden relative mt-auto">
                    <div class="absolute top-0 left-0 w-full h-20 sm:h-22 lg:h-24 bg-gradient-to-b from-[#F5F7FA] to-transparent z-10 pointer-events-none"></div>
                    <img 
                        src="/sistema-servicios.webp" 
                        class="w-full h-full object-cover  transition duration-700"
                        alt="Paneles Solares"
                    >
                </div>
            </div>
            <!-- Segunda tarjeta -->
            <div class="bg-[#F5F7FA] rounded-xl overflow-hidden flex flex-col group hover:shadow-2xl hover:-translate-y-2 transition duration-300 relative h-auto md:h-[500px]">
                <div class="p-8 md:p-12 flex-grow">
                    <h3 class="text-2xl md:text-2xl sm:text-2xl sm:text-3xl font-bold text-[#1F4C95] mb-4 sm:mb-4 sm:mb-4 sm:mb-5 lg:mb-5 sm:mb-5 sm:mb-6 font-rubik">Luminarias</h3>
                    <p class="text-gray-600 text-sm md:text-sm sm:text-base leading-relaxed font-titillium">
                        Suministro e instalación de luminarias LED industriales, retrofit y control básico.
                    </p>
                </div>
                
                <div class="h-56 sm:h-48 sm:h-52 md:h-48 sm:h-52 md:h-56 lg:h-60 md:h-64 md:h-56 sm:h-48 sm:h-52 md:h-48 sm:h-52 md:h-56 lg:h-60 md:h-56 sm:h-60 md:h-64 lg:h-56 sm:h-60 md:h-64 lg:h-72 overflow-hidden relative mt-auto">
                    <div class="absolute top-0 left-0 w-full h-20 sm:h-22 lg:h-24 bg-gradient-to-b from-[#F5F7FA] to-transparent z-10 pointer-events-none"></div>
                    <img 
                        src="/luminarias-servicios.jpg" 
                        class="w-full h-full object-cover  transition duration-700"
                        alt="Iluminación Industrial"
                    >
                </div>
            </div>

        </div>
    </div>
</section>
        <Contact />

        <Footer />
    
    </div> 
</Layout>
