---
// src/components/Navbar.astro
---

<nav class="fixed top-0 w-full z-50 bg-transparent transition-all duration-300">
    <!-- Gradiente de fondo -->
    <div class="absolute inset-0 bg-gradient-to-b from-black/80 to-transparent h-32 -z-10"></div>
    
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-6 mt-3 sm:mt-5">
        <div class="flex justify-between items-center h-20 sm:h-24">
            
            <!-- Logo -->
            <a href="/" class="flex items-center gap-4 sm:gap-7 group">
                <img 
                    src="/Emli.svg" 
                    alt="EMLI" 
                    class="h-14 sm:h-17 w-auto object-contain"
                >
                <div class="h-12 sm:h-15 w-[1px] bg-white/40"></div>
                <img 
                    src="/ABENSA.svg" 
                    alt="ABENSA" 
                    class="h-7 sm:h-8.5 w-auto object-contain"
                >
            </a>

            <!-- Navegación Desktop -->
            <div class="hidden xl:flex items-center ml-auto gap-8">
                <div class="flex items-center gap-8 text-[12px] font-titillium text-white uppercase tracking-widest">
                    <a href="/nosotros" class="hover:text-[#CEEA4D] transition relative group py-2">
                        Nosotros
                        <span class="absolute bottom-0 left-0 w-0 h-0.5 bg-[#CEEA4D] transition-all group-hover:w-full"></span>
                    </a>
                    <a href="/servicios" class="hover:text-[#CEEA4D] transition relative group py-2">
                        Servicios
                        <span class="absolute bottom-0 left-0 w-0 h-0.5 bg-[#CEEA4D] transition-all group-hover:w-full"></span>
                    </a>
                    <a href="/proceso" class="hover:text-[#CEEA4D] transition relative group py-2">
                        Proceso
                        <span class="absolute bottom-0 left-0 w-0 h-0.5 bg-[#CEEA4D] transition-all group-hover:w-full"></span>
                    </a>
                    <a href="/proyectos" class="hover:text-[#CEEA4D] transition relative group py-2">
                        Proyectos
                        <span class="absolute bottom-0 left-0 w-0 h-0.5 bg-[#CEEA4D] transition-all group-hover:w-full"></span>
                    </a>
                    <a href="/comercializadora" class="hover:text-[#CEEA4D] transition relative group py-2">
                        Comercializadora
                        <span class="absolute bottom-0 left-0 w-0 h-0.5 bg-[#CEEA4D] transition-all group-hover:w-full"></span>
                    </a>
                </div>
                
                <!-- Botón Contáctanos Desktop -->
                <a href="#contacto" class="group flex items-stretch gap-[4px] ml-4 h-10">
                    <div class="bg-[#B21508] text-white text-[13px] font-titillium font-bold uppercase tracking-widest px-6 flex items-center hover:bg-[#8f1106] transition duration-300 shadow-md rounded-l-md">
                        Contáctanos
                    </div>
                    <div class="bg-[#B21508] text-white px-4 flex items-center justify-center hover:bg-[#8f1106] transition duration-300 shadow-md rounded-r-md">
                        <svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="3">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M7 7l5 5-5 5" class="opacity-50"></path>
                            <path stroke-linecap="round" stroke-linejoin="round" d="M14 7l6 5-5 5"></path>
                        </svg>
                    </div>
                </a>
            </div>

            <!-- Botón menú móvil -->
            <div class="xl:hidden relative z-50 ml-auto">
                <button 
                    id="mobile-menu-btn" 
                    class="text-white p-2 focus:outline-none hover:text-[#CEEA4D] transition"
                    aria-label="Abrir menú de navegación"
                >
                    <svg class="w-8 h-8 sm:w-10 sm:h-10" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
                    </svg>
                </button>
            </div>
        </div>
    </div>

    <!-- Menú móvil -->
    <div 
        id="mobile-menu" 
        class="fixed inset-0 bg-[#1F4C95] z-40 translate-x-full transition-transform duration-300 flex flex-col justify-center items-center"
    >
        <!-- Textura de fondo -->
        <div class="absolute inset-0 opacity-10 bg-[url('https://www.transparenttextures.com/patterns/carbon-fibre.png')]"></div>
        
        <!-- Botón cerrar -->
        <button 
            id="close-menu-btn" 
            class="absolute top-4 sm:top-6 right-4 sm:right-6 text-white p-3 sm:p-4 hover:text-[#CEEA4D] transition"
            aria-label="Cerrar menú de navegación"
        >
            <svg class="w-10 h-10 sm:w-12 sm:h-12" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
            </svg>
        </button>
        
        <!-- Links del menú -->
        <div class="flex flex-col space-y-6 sm:space-y-8 text-center relative z-10 px-6">
            <a href="/" class="mobile-link text-2xl sm:text-3xl font-titillium font-bold text-white uppercase tracking-widest hover:text-[#CEEA4D] transition">
                Inicio
            </a>
            <a href="/nosotros" class="mobile-link text-2xl sm:text-3xl font-titillium font-bold text-white uppercase tracking-widest hover:text-[#CEEA4D] transition">
                Nosotros
            </a>
            <a href="/servicios" class="mobile-link text-2xl sm:text-3xl font-titillium font-bold text-white uppercase tracking-widest hover:text-[#CEEA4D] transition">
                Servicios
            </a>
            <a href="/proceso" class="mobile-link text-2xl sm:text-3xl font-titillium font-bold text-white uppercase tracking-widest hover:text-[#CEEA4D] transition">
                Proceso
            </a>
            <a href="/proyectos" class="mobile-link text-2xl sm:text-3xl font-titillium font-bold text-white uppercase tracking-widest hover:text-[#CEEA4D] transition">
                Proyectos
            </a>
            <a href="/comercializadora" class="mobile-link text-xl sm:text-2xl font-titillium font-bold text-white uppercase tracking-widest hover:text-[#CEEA4D] transition">
                Comercializadora
            </a>
            <a href="#contacto" class="mobile-link mt-6 sm:mt-8 text-lg sm:text-xl font-titillium font-bold text-[#CEEA4D] border-2 border-[#CEEA4D] px-10 sm:px-12 py-3 sm:py-4 uppercase hover:bg-[#CEEA4D] hover:text-[#1F4C95] transition">
                Contáctanos
            </a>
        </div>
    </div>
</nav>

<script>
    const btn = document.getElementById('mobile-menu-btn');
    const closeBtn = document.getElementById('close-menu-btn');
    const menu = document.getElementById('mobile-menu');
    const links = document.querySelectorAll('.mobile-link');

    function toggleMenu() {
        menu?.classList.toggle('translate-x-full');
        document.body.classList.toggle('overflow-hidden');
        
        // Ocultar/mostrar el botón hamburguesa cuando se abre/cierra el menú
        if (btn) {
            btn.style.display = menu?.classList.contains('translate-x-full') ? 'block' : 'none';
        }
    }

    if(btn) btn.addEventListener('click', toggleMenu);
    if(closeBtn) closeBtn.addEventListener('click', toggleMenu);
    links.forEach(l => l.addEventListener('click', toggleMenu));
</script>
